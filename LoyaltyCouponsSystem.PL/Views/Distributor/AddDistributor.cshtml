@model LoyaltyCouponsSystem.BLL.ViewModel.Distributor.DistributorViewModel

@{
    ViewData["Title"] = "Add Distributor";
    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";

    // Simplify customer data to just 'Code' and 'Name'
    var simplifiedCustomers = Model.Customers.Select(c => new
    {
        Code = c.Value,
        Name = c.Text
    }).ToList();
}

<div class="container mt-5">
    <!-- Backward Button -->
    <div class="mb-4">
        <a href="@Url.Action("GetAllDistributors", "Distributor")" class="btn btn-outline-primary" style="border-radius: 30px;">
            <i class="fas fa-arrow-left"></i> @SharedLocalizer["Back"]
        </a>
    </div>

    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="display-5 text-primary"><b>  @SharedLocalizer["Add Distributor"]</b></h1>
        <p class="lead text-secondary">@SharedLocalizer["Register new distributors with ease and flexibility"]</p>
    </div>

    <!-- Excel Upload Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-10">
            <form asp-controller="Distributor" asp-action="UploadExcel" enctype="multipart/form-data" method="post">
                <label class="form-label text-primary"><b>@SharedLocalizer["UploadExcelFiletoAuto_fillCustomerData"]</b></label>
                <div class="input-group">
                    <input type="file" name="file" accept=".xlsx, .xls" class="form-control" required />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload"></i> @SharedLocalizer["UploadExcel"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="AddDistributor" method="post" id="addDistributorForm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Code and Name -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label text-primary"><b>@SharedLocalizer["Code"] <span class="text-danger">*</span></b></label>
                        <input asp-for="Code" class="form-control" placeholder=@SharedLocalizer["Code"] required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label text-primary"><b> @SharedLocalizer["Name"] <span class="text-danger">*</span></b></label>
                        <input asp-for="Name" class="form-control" placeholder=@SharedLocalizer["Name"] required />
                    </div>
                </div>

                <!-- Governate and City Selection -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SelectedGovernate" class="form-label text-primary"><b> @SharedLocalizer["Governorate"] </b></label>
                        <select asp-for="SelectedGovernate" asp-items="Model.Governates" class="form-select" id="governate">
                            <option value="" disabled selected>@SharedLocalizer["SelectGovernate"]</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="SelectedCity" class="form-label text-primary"><b>@SharedLocalizer["Area"]</b></label>
                        <select asp-for="SelectedCity" class="form-select" id="city" disabled>
                            <option value="" disabled selected>@SharedLocalizer["SelectArea"]</option>
                        </select>
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber1" class="form-label text-primary"><b>@SharedLocalizer["PhoneNumber"]  <span class="text-danger">*</span></b></label>
                        <input asp-for="PhoneNumber1" class="form-control" placeholder=@SharedLocalizer["PhoneNumber"] required />
                    </div>
                </div>

                <!-- Customers -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SelectedCustomerCodes" class="form-label text-primary"><b>@SharedLocalizer["SelectCustomers"] </b></label>
                        <select asp-for="SelectedCustomerCodes" asp-items="Model.Customers" class="form-control select2" multiple>
                            <option></option>
                        </select>
                    </div>
                </div>
                <br />

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-custom">
                        <i class="fas fa-save me-2"></i> @SharedLocalizer[" Register Distributor"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


