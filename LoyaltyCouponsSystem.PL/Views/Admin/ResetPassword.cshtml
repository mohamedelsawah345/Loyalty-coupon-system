@model LoyaltyCouponsSystem.BLL.ViewModel.Admin.ResetPasswordViewModel

@{
    ViewData["Title"] = "Update User";
    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";
}

<div class="container mt-5">

    <!-- Backward Button -->
    <div class="mb-4">
        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-primary" style="border-radius: 30px;">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
    

    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="display-5 text-primary"><b>Reset Password</b></h1>
    </div>
    <br><br>
    <!-- Form Section -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="ResetPassword" method="post">
                <!-- Hidden field to pass CustomerID -->
                <input type="hidden" asp-for="Id" />


                <!-- Password Field and Reset Button -->
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-10 mb-4">
                        <!-- Increased column width from col-md-8 to col-md-10 -->
                        <label class="form-label text-primary"><b>Reset Password</b></label>
                        <div class="input-group">
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter New Password" /> <!-- Added form-control-lg for larger input -->
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-custom btn-lg">
                                    <!-- Added btn-lg for larger button -->
                                    <i class="fas fa-sync-alt"></i> Reset Password
                                </button>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .input-group {
        border-radius: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 10px;
        display: block;
    }

    .btn-outline-primary {
        font-size: 14px;
        padding: 8px 20px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        border: 2px solid #007bff;
        color: #007bff;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
        }

    .form-control {
        border-radius: 30px 0 0 30px;
        border: 2px solid #007bff;
        padding: 12px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

    .btn-custom {
        border-radius: 0 30px 30px 0;
        background-color: #007bff; /* Blue */
        color: #fff; /* White text */
        border: 2px solid #007bff;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            color: #fff; /* White text */
            background-color: #0056b3; /* Darker blue */
            border-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .btn-custom:active {
            transform: translateY(0);
            box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);
        }

        .btn-custom i {
            margin-right: 10px;
            font-size: 18px;
        }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .container {
        margin-top: 50px;
    }

</style>

