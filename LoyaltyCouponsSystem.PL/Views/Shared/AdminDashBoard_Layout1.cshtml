<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Loyalty Coupon System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="dashboard-wrapper d-flex">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar shadow">
            <div class="dashboard-sidebar-header text-center py-3">
                <h2 class="dashboard-title text-primary fw-bold">Admin Panel</h2>
                <hr class="text-light">
            </div>
            <ul class="dashboard-menu list-unstyled">
                <li class="dashboard-item mb-2">
                    <a href="/Dashboard" class="dashboard-link d-flex align-items-center">
                        <i class="fas fa-home me-2 text-light"></i>
                        <span class="text-light">Dashboard</span>
                    </a>
                </li>
                <li class="dashboard-item">
                    <a href="/Settings" class="dashboard-link d-flex align-items-center">
                        <i class="fas fa-cogs me-2 text-light"></i>
                        <span class="text-light">Settings</span>
                    </a>
                </li>
            </ul>
            <button type="button" class="dashboard-logout-btn btn btn-danger mt-auto w-100" data-bs-toggle="modal" data-bs-target="#logoutModal">
                <i class="fas fa-sign-out-alt me-2"></i> Log Out
            </button>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-main flex-grow-1">
            <!-- Header -->
            <header class="dashboard-header bg-primary text-white py-3 shadow-sm">
                <div class="container d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="dashboard-welcome mb-0">Hello, @User.Identity.Name 👋</h1>
                        <p class="dashboard-subtitle mb-0">Welcome to the Admin Dashboard.</p>
                    </div>
                    <div class="dashboard-search">
                        <input type="text" class="form-control" placeholder="Search employees by name or ID...">
                        <i class="fas fa-search position-absolute end-0 top-50 translate-middle-y me-3 text-secondary"></i>
                    </div>
                </div>
            </header>

            <!-- Main Content Section -->
            <section class="dashboard-content mt-4">
                <div class="container">
                    @RenderBody()
                </div>
            </section>
        </main>
    </div>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-center fw-bold text-danger">Are you sure you want to log out?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <form action="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-danger px-4">Yes</button>
                    </form>
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
